<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh mục </title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 lass="mb-4">Categories</h1>
    <a href="/dashboard" class="btn btn-primary">Back to Dashboard</a>
    <!-- <a href="/category/add">Add New Category</a> -->
    <% if (user.role === 'admin') { %>
    <a href="/category/add" class="btn btn-primary">Thêm danh mục</a>
    <% } %>
    <table class="table table-bordered">
      <tr>
        <!-- <th>ID</th>
            <th>Name</th>
            <th>Actions</th> -->
        <% if (user.role === 'admin') { %>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
        <% } %>
      </tr>
      <% categories.forEach(category => { %>
      <tr>
        <td><%= category._id %></td>
        <td><%= category.name %></td>
        <!-- <td>
                <a href="/category/edit/<%= category._id %>">Edit</a>
                <a href="/category/delete/<%= category._id %>" onclick="return confirm('Are you sure?')">Delete</a>
            </td> -->
        <% if (user.role === 'admin') { %>
        <td>
          <a href="/category/edit/<%= category._id %>" class="btn btn-warning btn-sm">Sửa</a>
          <a href="/category/delete/<%= category._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
        <% } %>
      </tr>
      <% }) %>
    </table>
    </div>
  </body>
</html>
